<resources>
    <style name="CategoryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@android:color/white</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="ShapeAppearance.BottomRounded" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:buttonBarButtonStyle">@style/MyAlertDialogButton</item>
    </style>

    <style name="MyAlertDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Fullscreen theme without action bar, status bar, etc -->
    <style name="Theme.YourApp.Fullscreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="Theme.KonKhmerMovie.Fullscreen" parent="Theme.KonKhmerMovie">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="CustomHintText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">10sp</item>
        <item name="android:translationY">1dp</item> <!-- This shifts the floating label lower -->
    </style>

    <style name="RedHintText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">#FF0000</item> <!-- ðŸ”´ Red floating label -->
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TransparentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CustomHintTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/movie</item>
    </style>

    <style name="CustomErrorTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/movie</item>
    </style>

    <style name="CustomHelperTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/movie</item>
    </style>

    <style name="CustomCounterTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/movie</item>
    </style>

    <style name="CustomEditTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/movie</item>

    </style>

    <style name="WhiteHintText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/movie</item> <!-- optional -->
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Headline6Font" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/movie</item>
    </style>

    <style name="Body1Font" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/movie</item>
    </style>

    <style name="Body2Font" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/movie</item>
    </style>





</resources>
